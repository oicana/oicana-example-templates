{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://nikl.me/invoice.schema.json",
    "title": "Invoice",
    "description": "Invoice data to compile the template",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "id",
        "biller",
        "recipient",
        "issuingDate",
        "dueDate",
        "deliveryDate",
        "items"
    ],
    "properties": {
        "$schema": {
            "description": "Schema of the object (soem editors will use this field by default).",
            "type": "string"
        },
        "id": {
            "description": "Id of the invoice",
            "type": "string"
        },
        "issuingDate": {
            "description": "Date at which the invoice is issued",
            "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
            "type": "string"
        },
        "deliveryDate": {
            "description": "Date at which the invoice is delivered",
            "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
            "type": "string"
        },
        "dueDate": {
            "description": "Date at which the invoice is due",
            "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
            "type": "string"
        },
        "biller": {
            "allOf": [{ "$ref": "#/$defs/contact" }],
            "type": "object",
            "required": [
                "iban",
                "company"
            ],
            "properties": {
                "company": {
                    "description": "Company of the contact",
                    "type": "string"
                },
                "iban": {
                    "description": "Iban of the contact",
                    "type": "string"
                }
            }
        },
        "recipient": {
            "type": "object",
            "$ref": "#/$defs/contact"
        },
        "items": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "required": [
                    "date",
                    "description",
                    "price"
                ],
                "properties": {
                    "date": {
                        "description": "Date When this item was completed",
                        "type": "string"
                    },
                    "description": {
                        "description": "Date When this item was completed",
                        "type": "string"
                    },
                    "quantity": {
                        "description": "Date When this item was completed",
                        "type": "number"
                    },
                    "dur-min": {
                        "description": "Date When this item was completed",
                        "type": "number"
                    },
                    "price": {
                        "description": "Date When this item was completed",
                        "type": "number"
                    }
                }
            }
        }
    },
    "$defs": {
        "contact": {
            "description": "A contact used in invoice data",
            "type": "object",
            "required": [
                "name",
                "title",
                "vat-id",
                "address"
            ],
            "properties": {
                "name": {
                    "description": "Name of the contact",
                    "type": "string"
                },
                "title": {
                    "description": "Title of the contact",
                    "type": "string"
                },
                "vat-id": {
                    "description": "Vat id  of the contact",
                    "minLength": 9,
                    "type": "string"
                },
                "address": {
                    "type": "object",
                    "additionalProperties": false,
                    "description": "Address data of the contact",
                    "required": ["country", "city", "postal-code", "street"],
                    "properties": {
                        "country": {
                            "description": "Country",
                            "type": "string"
                        },
                        "city": {
                            "description": "City",
                            "type": "string"
                        },
                        "postal-code": {
                            "description": "Postal code",
                            "type": "string"
                        },
                        "street": {
                            "description": "Street",
                            "type": "string"
                        }
                    }
                }
            }
        }
    }
}